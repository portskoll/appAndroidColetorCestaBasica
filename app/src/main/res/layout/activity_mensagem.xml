<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mensagem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="mundotela.net.coletapreco.view.Mensagem"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_gravity="center_vertical|center"
        android:visibility="visible">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_frame_pressed">

        <TextView
            android:text="Mensagem..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_men_mensagem" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_frame">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent">

            <TextView
                android:text="Nome da Coleta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_men_nomeColeta"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:background="@color/colorPrimary"
                android:padding="3dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark">

                    <TextView
                        android:text="Cidade da coleta:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text="Cidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_men_cidade"
                        android:layout_marginTop="3dp"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="1dp">

                    <TextView
                        android:text="Inicio :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textStyle="normal|bold"
                        android:textSize="10sp"
                        android:background="@color/white"
                        android:padding="2dp" />

                    <TextView
                        android:text="Data Inicial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_men_data_i"
                        android:textColor="@color/colorPrimary"
                        android:background="@color/colorPrimaryDark"
                        android:padding="2dp" />

                    <TextView
                        android:text="Fim :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textStyle="normal|bold"
                        android:textSize="10sp"
                        android:background="@color/white"
                        android:padding="2dp" />

                    <TextView
                        android:text="Data Final"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_men_data_f"
                        android:textColor="@color/red"
                        android:textStyle="normal|bold|italic"
                        android:background="@color/colorPrimaryDark"
                        android:padding="2dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_frame">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_superMercado"
                android:background="@drawable/card_frame_pressed"
                android:src="@mipmap/ic_launcher"
                android:onClick="buscarColeta" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Supermercado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_men_nomeSuper"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:text="EndereÃ§o do Supermercado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_men_end_super"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ATIVA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_men_statusColeta"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@color/colorAccent" />

    </FrameLayout>
</LinearLayout>
